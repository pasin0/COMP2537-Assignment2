<%- include("templates/header", { title: "Sign Up" }) %>

    <h1 class="text-2xl mt-4 text-center">Sign Up</h1>

    <div class="flex justify-center mt-4">
        <% if (typeof emailTaken !=='undefined' && emailTaken) { %>
            <p class="text-center text-red-600 font-medium">Email already in use.</p>
            <% } %>
    </div>

    <form action="/signup" method="POST" class="max-w-md mx-auto mt-6 space-y-4">
        <label>Name:</label><br>
        <input type="text" name="name" required class="w-full p-2 border rounded"><br>

        <label>Email:</label><br>
        <input type="email" name="email" required class="w-full p-2 border rounded"><br>

        <label>Password:</label><br>
        <input type="password" name="password" required class="w-full p-2 border rounded"><br>

        <button type="submit" class="bg-blue-600 text-white p-2 rounded">Sign Up</button>
    </form>

    <%- include("templates/footer") %>