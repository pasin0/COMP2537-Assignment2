<%- include("templates/header", { title: "Members Area" }) %>

    <h2 class="text-2xl mb-4">Welcome, <%= name %>!</h2>
    <p class="mb-4">Here are some images for you ❤️:</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 justify-center place-items-center">
        <% images.forEach(image=> { %>
            <img src="/<%= image %>" alt="Image" class="rounded-2xl shadow-lg border-4 border-pink-200" />
            <% }) %>
    </div>

    <a href="/logout" class="block mt-6 text-blue-600 underline">Logout</a>

    <%- include("templates/footer") %>