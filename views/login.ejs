<%- include("templates/header", { title: "Login" }) %>

    <h2 class="text-2xl text-center mt-6">Log In</h2>

    <form action="/login" method="POST" class="max-w-md mx-auto mt-6 space-y-4">
        <label>Email:</label>
        <input type="email" name="email" required class="w-full p-2 border rounded" />

        <label>Password:</label>
        <input type="password" name="password" required class="w-full p-2 border rounded" />

        <button type="submit" class="bg-blue-600 text-white w-full p-2 rounded">Login</button>
    </form>

    <%- include("templates/footer") %>